# Usage:
# kaem --verbose --strict

M2-Planet                                       \
    --debug                                     \
    --architecture riscv64                      \
    -f include/m2/lib.h                         \
    -f lib/linux/riscv64-mes-m2/crt1.c          \
    -f lib/linux/riscv64-mes-m2/mini.c          \
    -f lib/mes/globals.c                        \
    -f lib/m2/cast.c                            \
    -f lib/m2/exit.c                            \
    -f lib/mes/mini-write.c                     \
    -f lib/linux/riscv64-mes-m2/syscall.c       \
    -f include/linux/riscv64/syscall.h          \
    -f lib/linux/brk.c                          \
    -f lib/stdlib/malloc.c                      \
    -f lib/string/memset.c                      \
    -f lib/m2/read.c                            \
    -f lib/mes/fdgetc.c                         \
    -f lib/mes/fdputs.c                         \
    -f lib/stdio/getchar.c                      \
    -f lib/stdio/putchar.c                      \
    -f lib/stdio/fputs.c                        \
    -f lib/m2/open.c                            \
    -f lib/m2/mes_open.c                        \
    -f lib/string/strlen.c                      \
                                                \
    -f lib/string/strncmp.c                     \
    -f lib/posix/getenv.c                       \
    -f lib/ctype/isdigit.c                      \
    -f lib/ctype/isxdigit.c                     \
    -f lib/ctype/isspace.c                      \
    -f lib/ctype/isnumber.c                     \
    -f lib/mes/abtol.c                          \
    -f lib/stdlib/atoi.c                        \
    -f lib/string/memcpy.c                      \
    -f lib/stdlib/free.c                        \
    -f lib/stdlib/realloc.c                     \
    -f lib/string/strcpy.c                      \
    -f lib/posix/setenv.c                       \
    -f lib/linux/access.c                       \
    -f lib/m2/chmod.c                           \
    -f lib/linux/ioctl3.c                       \
    -f lib/m2/isatty.c                          \
    -f lib/linux/fork.c                         \
    -f lib/m2/execve.c                          \
    -f lib/m2/execv.c                           \
    -f lib/linux/waitpid.c                      \
    -f lib/linux/gettimeofday.c                 \
    -f lib/m2/clock_gettime.c                   \
    -f lib/m2/time.c                            \
    -f lib/linux/_getcwd.c                      \
    -f lib/m2/getcwd.c                          \
    -f lib/linux/dup.c                          \
    -f lib/linux/dup2.c                         \
    -f lib/string/strcmp.c                      \
    -f lib/string/memcmp.c                      \
    -f lib/linux/unlink.c                       \
    -f bugtest/hello-world.c                    \
    -o bugtest/m2/hello-world.M1

blood-elf --64 -f bugtest/m2/hello-world.M1 --little-endian -o bugtest/m2/hello-world.blood-elf-M1

M1                                              \
    --little-endian                             \
    --architecture riscv64                      \
    -f lib/m2/riscv64/riscv64_defs.M1           \
    -f lib/riscv64-mes/riscv64.M1               \
    -f lib/linux/riscv64-mes-m2/crt1.M1         \
    -f bugtest/m2/hello-world.M1                \
    -f bugtest/m2/hello-world.blood-elf-M1      \
    -o bugtest/m2/hello-world.hex2

hex2                                            \
    --little-endian                             \
    --architecture riscv64                      \
    --base-address 0x1000000                    \
    -f lib/m2/riscv64/ELF-riscv64-debug.hex2    \
    -f bugtest/m2/hello-world.hex2              \
    -o bugtest/hello-world

echo Running hello-world
./bugtest/hello-world
